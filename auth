  <script>
    // If already logged in, skip back to the main app
    if (localStorage.getItem("alexHubAuthed") === "true") {
      window.location.href = "index.html";
    }

    function login(event) {
      if (event) event.preventDefault();

      const input = document.getElementById("pw");
      const pw = input.value.trim();

      // üîê Set YOUR password here
      const correct = "alex123"; // change this to whatever you want

      if (pw === correct) {
        localStorage.setItem("alexHubAuthed", "true");
        window.location.href = "index.html";
      } else {
        alert("Incorrect password. Please try again.");
        input.focus();
        input.select();
      }
    }
  </script>
